    <script>

        function toggleMenu() {
            var x = document.getElementsByClassName("input-fieldss");

            for (var i = 0; i < x.length; i++) {
                if (x[i].style.display === "none" || x[i].style.display === "") {
                    x[i].style.display = "block"; // Change display to block
                } else {
                    x[i].style.display = "none"; // Change display to none
                }
            }
        }





      var modal = document.getElementById("myModal");

    // Get the close button
    var span = document.getElementsByClassName("close")[0];

    // Function to open the modal with different URLs
    function openModal(url) {
        modal.style.display = "block";
        document.getElementById("iframeContent").src = url;
    }

    // Event listener for the close button
    span.onclick = function () {
        modal.style.display = "none";
    }

    // Event listener for clicks outside the modal
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    }
    </script>

